<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_res_company_form_sale_custom" model="ir.ui.view">
        <field name="name">res.company.form.sale.custom</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="销售审批">
                    <group>
                        <field name="sale_auto_approve_amount_threshold"/>
                        <field name="sale_auto_approve_margin_threshold"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/ecommerce

# 服务器配置
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# 支付宝配置（真实环境）
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
ALIPAY_NOTIFY_URL=http://your-domain.com/api/payments/alipay/callback
ALIPAY_RETURN_URL=http://your-domain.com/payment/success
ALIPAY_APP_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_MOCK_ENABLED=false

# 微信支付配置（真实环境）
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_GATEWAY=https://api.mch.weixin.qq.com/pay/unifiedorder
WECHAT_NOTIFY_URL=http://your-domain.com/api/payments/wechat/callback
WECHAT_TRADE_TYPE=NATIVE
WECHAT_MOCK_ENABLED=false

# Stripe支付配置（真实环境）
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=cny
STRIPE_MOCK_ENABLED=false

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=7d

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 邮件服务配置（可选）
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@your-domain.com

# Redis配置（可选）
REDIS_URL=redis://localhost:6379

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 安全配置
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 支付超时配置（分钟）
PAYMENT_TIMEOUT=30
MAX_PAYMENT_RETRY=3

# 注意：在生产环境中，请确保：
# 1. 使用真实的支付配置信息
# 2. 设置 NODE_ENV=production
# 3. 使用强密码和密钥
# 4. 定期更换敏感信息
# 5. 不要将真实的支付密钥提交到版本控制系统